<?xml version="1.0" encoding="UTF-8"?>
<plug-in>
    <name>grustoragedb</name>
    <class>fr.paris.lutece.portal.service.plugin.PluginDefaultImplementation</class>
    <version>1.0.0</version>
    <documentation></documentation>
    <installation></installation>
    <changes></changes>
    <user-guide></user-guide>
    <description>grustoragedb.plugin.description</description>
    <provider>grustoragedb.plugin.provider</provider>
    <provider-url>http://fr.lutece.paris.fr</provider-url>
    <icon-url>images/admin/skin/feature_default_icon.png</icon-url>
    <copyright>Copyright (c) 2015 Mairie de Paris</copyright>
    <db-pool-required>1</db-pool-required>
    
    <core-version-dependency>
        <min-core-version>4.1.0</min-core-version>
        <max-core-version/>	
    </core-version-dependency>

    <!-- Admin features parameters -->
    <admin-features>
        <admin-feature>
            <feature-id>GRUSTORAGEDB_MANAGEMENT</feature-id>
            <feature-title>grustoragedb.adminFeature.ManageGRUData.name</feature-title>
            <feature-description>grustoragedb.adminFeature.ManageGRUData.description</feature-description>
            <feature-level>0</feature-level>
            <feature-url>jsp/admin/plugins/grustoragedb/ManageCustomers.jsp</feature-url>
            <feature-icon-url></feature-icon-url>
      </admin-feature>
    </admin-features>    

<!-- Daemons -->
    <daemons>
        <daemon>
            <daemon-id>customerIndexerDaemon</daemon-id>
            <daemon-name>grustoragedb.customerIndexerDaemon.name</daemon-name>
            <daemon-description>grustoragedb.customerIndexerDaemon.description</daemon-description>
            <daemon-class>fr.paris.lutece.plugins.grustoragedb.service.search.CustomerIndexerDaemon</daemon-class>
        </daemon>
    </daemons>


</plug-in>